write('Please enter the bot\'s id: ')
bot = tonumber(read()) -- the ID of the turtle 
shell.run('clear') --clear the screen
 rednet.open('back')
while true do
event, key = os.pullEvent()
shell.run('clear')
if key == 's' then
rednet.send(bot, 'backward')
end
if key == 'a' then -- left
rednet.send(bot, 'left')
end
if key == 'w' then --up
rednet.send(bot, 'up')
end
if key == 'd' then -- right
rednet.send(bot, 'right')
end
if key == 'down' then
rednet.send(bot, 'down')
end
end
